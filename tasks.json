{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ 生成活动文件",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",//使用C++17
				"-stdlib=libc++",
				"-g",
				"${file}",
				"/Users/zhuole/Desktop/大三下/软件工程/结对/Longest_English_Words_Chain/src/core.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-W",
                "-Wall",//开启错误警告
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "C/C++: clang++ 生成活动文件"
		}
	]
}

